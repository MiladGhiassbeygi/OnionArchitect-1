    "Swagger": {
      "Info": {
        "Version": "v1",
        "Title": "OnionArchitect",
        "Description": "Onion Architect Example",
        "Contact": {
          "Name": "OnionArchitect",
          "Email": "sajad.vahmi@gmail",
